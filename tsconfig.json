{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "strict": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "newLine": "lf",
    "types": ["node", "vue", "vite/client"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["es6", "dom", "dom.iterable", "scripthost", "es2016.Array.Include"]
  },
  "exclude": [
    "src/**/__tests__/*",
    "src/**/*.cy.ts",
    "**/*.spec.ts",
    "/dist",
    "node_modules"
  ]
}
